<!DOCTYPE html>
<html>
  <head>
    <% unless @skip_navbar %>
    <nav class="navbar">
      <%= render partial: "/shared/render_navbar" %>
    </nav>
    <% end %>
    <title>RORFrontEnd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="body-color">
    <%flash.each do |name, msg|  %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    <main>
    <%= yield %>
    </main>
  </body>
</html>
