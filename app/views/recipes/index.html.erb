<%= form_with url: recipes_path, method: :get, local: true do |f| %>
  <%= f.text_field :ingredient %>
  <%= f.submit "Search by Ingredient" %>
<% end %>

<% if @recipes %>
  <% if @recipes == {error: true} %>
    Sorry, there was a server error while processing your request!
    <% else %>
      <% @recipes.each do |recipe| %>
      <div class="card">
        <div class="card-body">
          <div class="card-title name">
            <img src="<%= recipe.image %>"height="125px" width="140px" style="margin:10px>"<br><br>
            <%= recipe.title %><br>
            <p class="card-text">Calories <%= recipe.calories %></p>
            <%= link_to "Add to Meal Plan", mealplans_path, {method: :post, params: {api_id: recipe.id, title: recipe.title, meal_plan_id: session[:meal_plan]}} %>
            <p class="card-text"><small class="text-muted"><%= recipe.cuisine %></small></p>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  <% else %>
  <br> Oh no! No search results found.
<% end %>
